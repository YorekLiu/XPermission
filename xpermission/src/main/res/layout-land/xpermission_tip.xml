<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xpermission_tip_border"
        android:layout_marginStart="13dp"
        android:padding="15dp">
        <TextView
            android:id="@+id/xpermission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="录音权限申请说明录音权限申请说明录音权限申请说明录音权限申请说明"
            android:textSize="16sp"
            android:textColor="#FF6F4C46"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/xpermission_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/xpermission_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="录音权限申请说明录音权限申请说明录音权限申请说明录音权限申请说明"
            android:textSize="13sp"
            android:textColor="#FF98817B"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/xpermission_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>